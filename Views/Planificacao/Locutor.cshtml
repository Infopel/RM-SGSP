@{
    ViewData["Title"] = "SGSP - Rádio de Moçambique | Planificação";
}

<div class="col-md-12 mb-2 justify-content-between margin-top">
    <h1 style="font-weight: 300;">Planificação</h1>
    <button type="button" style=" margin-top: 0.5rem;" class="btn btn-primary btn-sm float-right" data-toggle="modal" data-target="#modal-cadastroAnuncio"><i class="fas fa-plus"></i> Adicionar Anúncio</button>
    <button type="button" class="btn modal-open-plan" data-toggle="modal" hidden data-target="#modal-locutor"></button>
    <button type="button" class="btn modal-canal" data-toggle="modal" hidden data-target="#modal-canalSelect"></button>

</div>

<partial name="_SchedulerGridDay" />

<div class="modal fade" id="modal-locutor" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="title-spot"></h4><span style="margin: .6rem; color:#fff !important" class="badge bg-warning" id="estadoSpan"></span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="Designacao">Designação</label>
                            <input type="email" class="form-control" id="Designacao" placeholder="Enter email" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Data de Emissão</label>
                            <input type="text" class="form-control" id="DataT" placeholder="Enter email" disabled>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Hora da Emissão</label>
                            <input type="time" class="form-control horaDisabled" id="horaT" name="Hora da Emissão" data-message-error="Este campo é obrigatório." placeholder="HH:mm" disabled />
                            <span class="error invalid-feedback horaT"></span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="Duracao">Duração</label>
                            <input type="email" class="form-control" id="Duracao" placeholder="Enter email" disabled>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="Estado" id="#textTrans">Estado</label>
                            <select class="form-control isOb" name="Estado" data-message-error="Este campo é obrigatório." id="Estado">
                                <option value="" disabled selected hidden>- Selecionar -</option>
                                <option value="1" class="transVal1">Transmitido</option>
                                <option value="2" class="transVal2">Não Transmitido</option>
                            </select>
                            <span class="error invalid-feedback Estado"></span>
                        </div>
                    </div>
                </div>
                <div class="row ifMotivo" style="display: none">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Motivo</label>
                            <textarea class="form-control disabled-on" name="Motivo" data-message-error="Este campo é obrigatório." id="Motivo" rows="4" placeholder="Insira o motivo ..."></textarea>
                            <span class="error invalid-feedback Motivo"></span>
                        </div>
                    </div>
                </div>
                <div class="row ifMotivoCoordenador" style="display: none">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="userC">Responsavel</label>
                            <input type="text" class="form-control" id="userC" placeholder="" disabled>
                        </div>
                    </div>
                </div>
            </div>
            <span id="idPlanificacao" style="display:none"></span>
            <div class="modal-footer toHidden">
                <button type="button" class="btn btn-primary btn-sm isDisabled salvarEstado" disabled>Salvar</button>
                <button type="button" class="btn btn-outline-primary btn-sm parecerModal-click" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-cadastroAnuncio" data-backdrop="static" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cadastro de Anúncio </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Cliente</label>
                                <select name="Cliente" class="form-control" id="clienteSelect2" style="width: 100%" data-message-error="Este campo é obrigatório.">
                                </select>
                                <span class="error invalid-feedback clienteSelect2"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Designação</label>
                            <textarea rows="2" data-message-error="Este campo é obrigatório." class="form-control isObrigatorio disabled-on wow" name="Designação" placeholder="Insira a Designação" id="inputDesignacaoEdit" disabled></textarea>
                            <span class="error invalid-feedback inputDesignacaoEdit"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="fomr-group">
                            <label class="control-label">Data</label>
                            <input type="date" class="form-control isObrigatorio" name="Data de Término" data-message-error="Este campo é obrigatório." disabled id="dataFinalEdit" placeholder="dd/mm/yyyy" />
                            <span class="error invalid-feedback dataFinalEdit"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label"> Duração</label>
                            <input type="text" class="form-control isObrigatorio disabled-on wow" id="duracaoEdit" name="Duração" data-message-error="Este campo é obrigatório." placeholder="HH:mm:ss" data-inputmask='"mask": "99:99:99s"' data-mask disabled />
                            <span class="error invalid-feedback duracaoEdit"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label"> Periodicidade</label>
                            <input type="text" id="periodicidadeEdit" class="form-control isObrigatorio disabled-on wow" name="Periodicidade" data-message-error="Este campo é obrigatório." data-inputmask='"mask": "9999"' data-mask placeholder="0" disabled />
                            <span class="error invalid-feedback periodicidadeEdit"></span>
                        </div>
                    </div>
                </div>
                <span class="id-cliente" hidden="hidden"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm saveAnuncio disabled-on" disabled>Salvar</button>
                <button type="button" class="btn btn-outline-primary btn-sm modal-close" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<span hidden id="idCanalUser">@User.FindFirst("idCanal").Value</span>

