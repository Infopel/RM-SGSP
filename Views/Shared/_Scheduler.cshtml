<div class="col-md-3">
    <div class="sticky-top mb-3">
        <div class="card">
            <div class="card-body">
                <partial name="_Calendar" />
                <div id="mycalendar"></div>
                <div id="external-events">
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" style="font-weight: 600;">Spots</h4>
            </div>
            <div class="card-body">
                <div class="btn-group" style="width: 100%; margin-bottom: 10px;">
                    <ul class="fc-color-picker" id="color-chooser">
                        <li class="pendente">
                            <div class="icheck-primary d-inline">
                                <input type="checkbox" class="schedulerCheck" id="pendente" value="1" checked >
                                <label for="pendente">Pendente</label>
                            </div>
                        </li>
                        <li class="pendenteAuto isToHide">
                            <div class="icheck-orange d-inline">
