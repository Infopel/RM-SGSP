@model SGSP.Models.CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<div class="col-sm-12 margin-1">
    <h1 style="font-weight: 300;">Roles</h1>
</div>

<div class="col-md-12">
    <!-- Horizontal Form -->
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Adicionar</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="CreateRole" method="post" class="form-horizontal">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="RoleName" for="inputEmail3" class="col-sm-2 col-form-label">Nome</label>
                    <div class="col-sm-10">
                        <input asp-for="RoleName" class="form-control" id="inputEmail3" placeholder="Role" />
                    </div>

                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a  asp-action="ListRoles" type="submit" class="btn btn-default">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary float-right" />
            </div>
            <!-- /.card-footer -->
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
